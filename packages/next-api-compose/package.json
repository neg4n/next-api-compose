{
  "name": "next-api-compose",
  "version": "2.0.0",
  "description": "Compose middleware chain in Next.js API Routes. Supports Pages and App router",
  "author": {
    "name": "Igor Klepacki",
    "email": "neg4n@icloud.com",
    "url": "https://neg4n.dev/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neg4n/next-api-compose"
  },
  "keywords": [
    "nextjs",
    "nextjs-plugin",
    "app-router",
    "next",
    "next-app",
    "pages-router",
    "middleware",
    "next.js"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/neg4n/next-api-compose/issues"
  },
  "homepage": "https://github.com/neg4n/next-api-compose/#readme",
  "main": "./dist/app.js",
  "exports": {
    ".": "./dist/app.js",
    "./app": "./dist/app.js",
    "./pages": "./dist/pages.js"
  },
  "scripts": {
    "prepublishOnly": "pnpm run build",
    "prebuild": "rimraf dist",
    "build": "tsup src/app.ts src/pages.ts --dts --minify",
    "examples": "pnpm run build:watch",
    "build:watch": "pnpm run build --watch",
    "test": "jest",
    "test:coverage": "pnpm run test --coverage"
  },
  "peerDependencies": {
    "next": ">=13.4.13",
    "react": ">=18.2.0",
    "react-dom": ">=18.2.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@jest/types": "^29.6.3",
    "@types/node": "20.8.3",
    "@types/supertest": "^2.0.11",
    "jest": "^27.2.1",
    "prettier": "^2.4.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "ts-toolbelt": "^9.6.0",
    "tsup": "^7.2.0",
    "type-fest": "^4.2.0",
    "typescript": "^5.1.6",
    "undici": "^5.28.2"
  },
  "prettier": {
    "printWidth": 90,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true
  }
}
